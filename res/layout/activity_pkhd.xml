<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/player_v_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/player_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/player_left_p_0"
            android:tag="0" />

        <ImageView
            android:id="@+id/player_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/player_right_p_0"
            android:tag="0" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/health_left"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/player_v_player"
        android:layout_alignTop="@id/player_v_player"
        android:layout_toLeftOf="@id/player_v_player"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:tag="10"
        android:weightSum="1.0" >

        <ImageView
            android:id="@+id/health_left_9"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="#000000" />

        <ImageView
            android:id="@+id/health_left_8"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="#000000" />

        <ImageView
            android:id="@+id/health_left_7"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="#000000" />

        <ImageView
            android:id="@+id/health_left_6"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="#000000" />

        <ImageView
            android:id="@+id/health_left_5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="#000000" />

        <ImageView
            android:id="@+id/health_left_4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="#000000" />

        <ImageView
            android:id="@+id/health_left_3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="#000000" />

        <ImageView
            android:id="@+id/health_left_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="#000000" />

        <ImageView
            android:id="@+id/health_left_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="#000000" />

        <ImageView
            android:id="@+id/health_left_0"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="#000000" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/health_right"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/player_v_player"
        android:layout_alignTop="@id/player_v_player"
        android:layout_toRightOf="@id/player_v_player"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:tag="10"
        android:weightSum="1.0" >

        <ImageView
            android:id="@+id/health_right_9"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="#000000" />

        <ImageView
            android:id="@+id/health_right_8"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="#000000" />

        <ImageView
            android:id="@+id/health_right_7"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="#000000" />

        <ImageView
            android:id="@+id/health_right_6"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="#000000" />

        <ImageView
            android:id="@+id/health_right_5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="#000000" />

        <ImageView
            android:id="@+id/health_right_4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="#000000" />

        <ImageView
            android:id="@+id/health_right_3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="#000000" />

        <ImageView
            android:id="@+id/health_right_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="#000000" />

        <ImageView
            android:id="@+id/health_right_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="#000000" />

        <ImageView
            android:id="@+id/health_right_0"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="#000000" />
    </LinearLayout>

    <!-- Character controls. -->

    <LinearLayout
        android:id="@+id/pkhd_left"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/player_v_player"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/player_left_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/p"
            android:tag="0" />

        <ImageView
            android:id="@+id/player_left_k"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/k"
            android:tag="0" />

        <ImageView
            android:id="@+id/player_left_h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/h"
            android:tag="0" />

        <ImageView
            android:id="@+id/player_left_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/d"
            android:tag="0" />
    </LinearLayout>

</RelativeLayout>